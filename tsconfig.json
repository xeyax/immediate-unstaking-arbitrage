{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "mocha", "chai"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "./test/**/*.ts",
    "./scripts/**/*.ts",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "coverage",
    "dist"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
